{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Bitbeat",
    "compilerOptions": {
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "outDir": ".",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2015",
        "types": ["node"]
    },
    "exclude": ["./node_modules"],
    "files": [
        "./index.ts",
        "./webSocketAction.ts",
        "./webSocketActionMiddleware.ts",
        "./webSocketConnection.ts",
        "./webSocketConnectionMiddleware.ts"
    ],
    "include": ["./config", "./servers"]
}
